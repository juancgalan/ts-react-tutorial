{
    "compilerOptions": {
        "outDir": "public/build",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-test",
        "webpack",
        "jest",
        "src/setuptests.ts"
    ],
    "types": [
        "typePatches"
    ],
    "include": [
        "./src/**/*"
    ]
}